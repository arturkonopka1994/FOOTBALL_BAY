<div class="container justify-content-center">

  <h1 class="text-center"> Your Dashboard</h1>

  <div class="container">
    <h2>Upcoming bookings</h2>

    <% @booked_matches.each do |booking| %>
    
      <div class="newcard dashboard">
          
        <div>
          <img src="<%= cl_image_path booking.match.venue.photo.key, height: 250, width: 300, crop: :fill, gravity: :auto %>" alt="venue picture" style="border-radius: 8px;">
        </div>

        <div style="margin-left:100px; margin-right:100px; width: 460px;">
          <h3 style="font-family:'Bebas Neue', cursive;"><%= booking.match.title %></h3>
          
          <p><%= booking.match.start_time.strftime("%A, %d %b %Y %l:%M%p") %> until <%= booking.match.end_time.strftime("%l:%M%p") %></p>
          <p><%= booking.match.venue.post_code %></p>
          <p><%= booking.match.no_of_players %> a side game by <%= booking.match.user.email %></p>
        
          <%= link_to "Cancel", booking_path(booking), method: :delete, data: { confirm: "Are you sure?"}, class: "button delete" %>
         
        </div>
       
      </div>
    <% end %>
  </div>
  
  <div class="container">
    <h2>Previous Bookings</h2>

    <% @past_bookings.each do |booking| %>
      <div class="newcard dashboard">
          
        <div>
          <img src="<%= cl_image_path booking.venue.photo.key, height: 250, width: 300, crop: :fill, gravity: :auto %>" alt="venue picture" style="border-radius: 8px;">
        </div>

        <div style="margin-left:100px; margin-right:100px; width: 460px;">
          <h3 style="font-family:'Bebas Neue', cursive;"><%= booking.match.title %></h3>
          
          <p><%= booking.match.start_time.strftime("%A, %d %b %Y %l:%M%p") %> until <%= booking.match.end_time.strftime("%l:%M%p") %></p>
          <p><%= booking.match.venue.post_code %></p>
          <p><%= booking.match.no_of_players %> a side game by <%= booking.match.user.email %></p>
        
          <%= link_to "Delete", booking_path(booking), method: :delete, data: { confirm: "Are you sure?"}, class: "button delete" %>
         
        </div>
       
      </div>
    <% end %>
  </div>

</div>


